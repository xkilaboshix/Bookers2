<% if book.favorited_by?(user) %>
    <%= link_to book_favorites_path(book), class: "fav",method: :delete, remote: true do %>
      <i class="fa fa-heart" id="fav-<%= book.id %>" aria-hidden="true"></i>
      <%= book.favorites.count %>
    <% end %>
<% else %>
    <%= link_to book_favorites_path(book), class: "fav",method: :post, remote: true do %>
      <i class="fa fa-heart-o" id="fav-<%= book.id %>" aria-hidden="true"></i>
      <%= book.favorites.count %>
    <% end %>
<% end %>
