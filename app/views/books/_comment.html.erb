<table class = "table comment">
  <% book.book_comments.each do |book_comment| %>
    <tr class="<%= book_comment.id %>">
      <td>
        <%= attachment_image_tag book_comment.user, :profile_image, :fill, 60, 60,fallback: "no_image.jpg", size:'60x60' %>
      </td>
      <td><%= book_comment.user.name %></td>
      <td><%= book_comment.comment %></td>
      <td><%= book_comment.created_at.strftime('%Y/%m/%d %H:%M') %></td>
      <% if user.id == book_comment.user.id %>
      <td><%= link_to "Destroy", book_book_comment_path(book, book_comment), method: :delete, remote: true, class: "btn btn-danger" %></td>
      <% end %>
    </tr>
  <% end %>
</table>
