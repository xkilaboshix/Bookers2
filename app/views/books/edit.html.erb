<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
    <h2>Editing Book</h2>
    <% if @book.errors.any? %>
      <div class="alert alert-warning">
        <ul>
          <%= @book.errors.count %>error prohibited this obj from being saved:
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
