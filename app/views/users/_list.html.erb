<div class="col-xs-3">
  <h2>User info</h2>
  <%= attachment_image_tag user, :profile_image, :fill, 100, 100,fallback: "no_image.jpg", size:'100x100' %>
  <table class ="table">
    <tr>
      <td>name</td>
      <td><%= user.name %></td>
    </tr>

    <tr>
      <td>introduction</td>
      <td><%= user.introduction %></td>
    </tr>
    <tr>
      <td>follows</td>
      <td><%=link_to user.followings.count, followings_path %></td>
    </tr>
    <tr>
      <td>followers</td>
      <td><%=link_to user.followers.count, followers_path %></td>
    </tr>
    <tr>
      <td colspan="2">
        <%= render 'users/follow_button', user: user%>
      </td>
    </tr>
   </table>
   <% if user.id == current_user.id %>
     <div class = "row">
       <%= link_to edit_user_path(user), class: 'col-xs-12 btn btn-default' do %>
       <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
       <% end %>
     </div>
   <% end %>


<div class = "new-book">
  <h2>New book</h2>
  <%= form_for(book) do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title, class:"col-xs-12" %>

    <h4>Opinion</h4>
    <%= f.text_area :body, class:"col-xs-12" %>

    <%= f.submit 'Create Book', class:"col-xs-12" %>

<% end %>
</div>
</div>
