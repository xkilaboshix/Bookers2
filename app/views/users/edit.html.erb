<section>
  <h2>User info</h2>
  <% if @user.errors.any? %>
    <div class="alert alert-warning">
      <ul>
        <%= @user.errors.count %>error prohibited this obj from being saved:
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
</section>
<div class = "form-body">
  <%= form_for(@user) do |f| %>
    <div class="form-group has-icon">
      <label class="control-label sr-only" for="inputName">Name</label>
      <%= f.text_field :name, autofocus: true, class:"form-control"%>
      <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
    </div>
    <div class="form-group has-icon">
      <%= f.attachment_field :profile_image, class: "user-edit-form" %>
    </div>
    <div class="form-group has-icon">
      <label class="control-label sr-only" >introduction</label>
      <%= f.text_area :introduction, autofocus: true, class:"form-control"%>
    </div>


    <%= f.submit "Update User", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
  <% end %>
</div>
